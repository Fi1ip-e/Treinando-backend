{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
    
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" placeholder="titulo" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" placeholder="Slug" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" placeholder="descricão" class="form-control">
            <label for="conteudo" name="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" placeholder="digite aqui o conteúdo"></textarea>
            <label for="categoria">Categoria:</label><br>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Postagem Registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-4">Criar Postagem</button>
        </form>
    </div>
</div>